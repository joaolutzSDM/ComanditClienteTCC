<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />
            <gradient android:angle="270" android:endColor="#00473D" android:startColor="#01A392" android:type="linear" />
        </shape>
    </item>
    <item android:state_enabled="false" android:drawable="@drawable/login_button_background_disabled"/>
    <item android:state_pressed="true" android:drawable="@drawable/login_button_background_pressed"/>
</selector>