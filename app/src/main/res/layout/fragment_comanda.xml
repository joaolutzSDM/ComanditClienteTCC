<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_comanda"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_comanda"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/comanda_background">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/comanda_background">

                    <ImageView
                        android:id="@+id/imageview_client_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_launcher_foreground"
                        android:contentDescription="@string/logo_cliente" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/numero_comanda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="30dp"
                            android:layout_gravity="end"
                            android:text="001"
                            android:textAppearance="@style/numeroComanda"
                            android:textAlignment="viewEnd" />

                        <TextView
                            android:id="@+id/numero_mesa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="Mesa 1"
                            android:textAppearance="@style/dadosComanda"
                            android:textAlignment="viewEnd" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="@string/comanda_ativa_desde"
                            android:textAppearance="@style/dadosComanda"
                            android:textAlignment="viewEnd"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/hora_abertura"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="16/07/20 20:00"
                            android:textAppearance="@style/dadosComanda"
                            android:textAlignment="viewEnd"/>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_conta"
                android:layout_width="match_parent"
                android:layout_height="534dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:divider="@color/grey"
                    android:background="@drawable/account_background">

                <TextView
                    android:id="@+id/textview_conta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/minha_conta"
                    android:textAppearance="@style/tituloConta"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:rowCount="6">

                        <TextView android:layout_row="0"
                            android:layout_column="0"
                            style="@style/dadosConta"
                            android:text="@string/quantidade_pedidos"/>

                        <TextView android:id="@+id/quantidade_pedidos"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_gravity="end"
                            style="@style/dadosConta" />

                        <TextView android:layout_row="1"
                            android:layout_column="0"
                            style="@style/dadosConta"
                            android:text="@string/taxa_servico"/>

                        <TextView android:id="@+id/taxa_servico"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:layout_gravity="end"
                            style="@style/dadosConta" />

                        <TextView android:layout_row="2"
                            android:layout_column="0"
                            style="@style/dadosConta"
                            android:text="@string/valor_pedidos"/>

                        <TextView android:id="@+id/valor_pedidos"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:layout_gravity="end"
                            style="@style/dadosConta" />

                        <TextView android:layout_row="3"
                            android:layout_column="0"
                            style="@style/dadosConta"
                            android:text="@string/valor_servico"/>

                        <TextView android:id="@+id/valor_servico"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:layout_gravity="end"
                            style="@style/dadosConta" />

                        <TextView android:layout_row="4"
                            android:layout_column="0"
                            style="@style/dadosConta"
                            android:text="@string/valor_couvert"/>

                        <TextView android:id="@+id/valor_couvert"
                            android:layout_row="4"
                            android:layout_column="1"
                            android:layout_gravity="end"
                            style="@style/dadosConta" />

                        <TextView android:layout_row="5"
                            android:layout_column="0"
                            style="@style/dadosConta"
                            android:textStyle="bold"
                            android:text="@string/valor_total"/>

                        <TextView android:id="@+id/valor_total"
                            android:layout_row="5"
                            android:layout_column="1"
                            android:layout_gravity="end"
                            style="@style/dadosConta"
                            android:textStyle="bold" />

                    </GridLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>