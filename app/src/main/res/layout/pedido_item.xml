<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:rowCount="4">

    <TextView
        android:id="@+id/item_pedido"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="0"
        android:textAlignment="viewStart"
        android:text="Item Pedido" />

    <TextView
        android:id="@+id/nome_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:text="Batata Calabresa"
        android:layout_gravity="end"
        android:textAlignment="viewEnd"/>

    <TextView
        android:id="@+id/quantidade_pedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:text="Quantidade Pedido"
        android:textAlignment="viewEnd" />

    <LinearLayout
        android:layout_row="2"
        android:layout_column="0">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/ic_baseline_access_time_24"
            />

        <TextView
            android:id="@+id/hora_pedido"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="HorÃ¡rio Pedido" />

    </LinearLayout>

    <TextView
        android:id="@+id/valor_pedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:text="Valor Pedido"
        android:textAlignment="viewEnd"/>

    <TextView
        android:id="@+id/observacao_pedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:text="Observacao Pedido"
        android:visibility="gone"/>

</GridLayout>